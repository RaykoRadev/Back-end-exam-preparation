{{setTitle 'Create Page'}}

<section id="create-container">
    <div class="create-container-info">
        <h1>Create Volcano Wiki</h1>
        <form method="post">
            <label>Name:</label>
            <input type="text" id="name" name="name" placeholder="..." value="{{catalog.name}}">
            <label>Location:</label>
            <input type="text" id="location" name="location" placeholder="..." value="{{catalog.location}}">
            <label>Elevation:</label>
            <input type="number" id="elevations" name="elevation" placeholder="..." value="{{catalog.elevation}}">
            <label>Year of Last Eruption:</label>
            <input type="number" id="last-year-eruption" name="eruption" placeholder="..." value="{{catalog.eruption}}">
            <label>Image:</label>
            <input type="text" id="image" name="imageUrl" placeholder="http://..." value="{{catalog.imageUrl}}">
            <label>Volcano Type:</label>
            <select id="type" name="">
                <option value="Supervolcanoes">Supervolcanoes</option>
                <option value="Submarine">Submarine</option>
                <option value="Subglacial">Subglacial</option>
                <option value="Mud">Mud</option>
                <option value="Stratovolcanoes">Stratovolcanoes</option>
                <option value="Shield">Shield</option>
            </select>
            <label>Description:</label>
            <textarea id="description" name="description" placeholder="...">{{catalog.description}}</textarea>
            <input type="submit" id="btn" value="Submit"></input>
        </form>
    </div>
</section>