{{setTitle 'Details Page'}}

<!-- Details Page -->
<section id="catalog-section">

    <h1 class="item">
        {{data.title}}
        {{#if data.isOwner}}
        <div class="f-right">
            <a class="action pad-small f-left" href="#">Edit</a>
            <a class="action pad-small f-left" href="#">Delete</a>
        </div>
        {{/if}}
    </h1>
    <div class="item padded">

        <div class="layout right large">

            <div class="col">
                <img src="{{data.item.imageUrl}}" class="img-large">
            </div>

            <div class="content pad-med">

                <p>In category: <strong>{{data.item.category}}</strong></p>
                <p>{{data.item.description}}</p>

                <div class="align-center">
                    <div>
                        Current price: $<strong>{{data.item.price}}</strong>
                    </div>
                    {{#if data.isOwner}}
                    {{#if data.item.bidder}}
                    <div>
                        <!-- If there is a bidder -->
                        Bid by <strong>{{data.name}}</strong>

                        <!-- # Bonus: If there is a bidder --><!--

                                            <a class="action pad-med cta" href="#">Close Auction</a>
                                            
                                            # End of Bonus -->
                        {{else}}
                        <!-- If there are no bids -->
                        No bids
                    </div>
                    {{/if}}
                    {{else}}
                    {{#if isAuthenticated}}
                    {{#if data.isBided}}
                    <!-- If current user is the bidder -->
                    <div>
                        You are currently the <strong>highest bidder</strong> for this auction
                    </div>
                    {{else}}
                    <!-- If current user can place a bid -->
                    <form class="vertical" method="post">
                        <label><span>Bid amount</span><input type="number" name="bid"></label>
                        <input class="action" type="submit" value="Place bid">
                    </form>
                    {{/if}}

                    {{/if}}
                    {{/if}}
                </div>

            </div>
        </div>

        <footer>Listed by {{user.firstName}} {{user.lastName}}</footer>
    </div>

</section>