{{setTitle 'Details Page'}}
<section id="details-page">
    <h1>Details</h1>
    <article class="details-card">

        <article class="details-card-text">
            <h2>Title:<br> {{result.art.title}}</h2>
            <h3>Author: {{result.art.author.username}}</h3>
            <h3>Painting technique: {{result.art.technique}}</h3>
            <h3>Certificate of authenticity: {{result.art.certificate}}</h3>

            <!-- If there is no registered user, do not display buttons-->
            {{#if isAuthenticated}}
            <div class="buttons">
                {{#if result.isAuthor}}
                <!-- Only for registered user and author of the publication -->
                <a href="/art/edit/{{result.art.id}}" class="btn-edit">Edit</a>
                <a href="/art/delete/{{result.art.id}}" class="btn-delete">Delete</a>
                {{else}}
                {{#if result.isSharedByUser}}
                <!-- logged in user who has already shared the publication-->
                <p class="shared-pub">You already shared this publication</p>
                {{else}}
                <!-- logged in user who has not yet shared the publication-->
                <a href="/art/share/{{result.art.id}}" class="btn-share">Share publication</a>
                {{/if}}
                {{/if}}
            </div>
            {{/if}}
        </article>

        <article class="details-card-image">
            <img src="{{result.art.imageUrl}}" alt="art-image2">
        </article>

    </article>
</section>