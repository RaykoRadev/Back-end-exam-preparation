{{setTitle 'Details Page'}}

<section class="details-page">
    <h1>Details</h1>
    <article class="details-card">

        <article class="details-card-text">
            <h2>Title:<br>{{data.review.title}}</h2>
            <h3>Author: {{data.review.author}}</h3>
            <h3>Stars: {{data.review.stars}}</h3>
            <h3>Genre: {{data.review.genre}}</h3>
            <h3>Review: {{data.review.review}}
            </h3>

            {{#if isAuthenticated}}
            <!-- If there is no registered user, do not display buttons-->
            <div class="buttons">
                {{#if data.isOwner}}
                <!-- Only for registered user and author of the review -->
                <a href="/catalog/edit/{{data.review.id}}" class="btn-edit">Edit</a>
                <a href="/catalog/delete/{{data.review.id}}" class="btn-delete">Delete</a>
                {{else}}
                {{#if data.isInWishList}}
                <!-- logged in user who has already wished book-->
                <p class="wish-pub">You already added the book to your wish list</p>
                {{else}}
                <!-- logged in user who has not yet wished book-->
                <a href="/catalog/wish/{{data.review.id}}" class="btn-wish">Wish to read</a>
                {{/if}}
                {{/if}}
            </div>
            {{/if}}
        </article>

        <article class="details-card-image">
            <img src="{{data.review.imageUrl}}">
        </article>

    </article>
</section>